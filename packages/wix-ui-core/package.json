{
  "private": false,
  "name": "wix-ui-core",
  "description": "wix-ui-core",
  "version": "1.0.0",
  "author": {
    "name": "Lior Belinsky",
    "email": "liorbe@wix.com"
  },
  "main": "./dist/src/index.js",
  "files": [
    "dist",
    "*.js",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui.git"
  },
  "scripts": {
    "build": "haste build && import-path --path src/components",
    "pretest": "haste build && build-storybook",
    "test": "haste test --jest && haste test --protractor",
    "posttest": "haste lint",
    "start": "haste start & npm run storybook",
    "release": "haste release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "babel-runtime": "^6.22.0",
    "jss": "^9.3.3",
    "jss-preset-default": "^4.0.1",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@storybook/addon-options": "3.2.13",
    "@storybook/react": "~3.1.0",
    "@storybook/storybook-deployer": "~2.0.0",
    "@types/jest": "^21.1.8",
    "@types/react": "^15.6.7",
    "@types/react-dom": "^15.5.6",
    "enzyme": "^2.3.0",
    "gh-pages-auto-release": "^1.1.2",
    "haste-preset-yoshi": "latest",
    "import-path": "^0.0.7",
    "prop-types": "^15.6.0",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-test-renderer": "^15.5.4",
    "ts-jest": "^21.2.4",
    "typescript": "^2.6.2",
    "wix-ui-test-utils": "^1.0.7"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "extends": "wix/react",
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-handler-names": 0,
      "react/no-find-dom-node": 0,
      "react/no-string-refs": 0,
      "react/jsx-boolean-value": 2,
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "yoshi": {
    "entry": {
      "toggleSwitch": "components/ToggleSwitch/index"
    },
    "externals": {
      "react": "react",
      "react-dom": "reactDOM"
    },
    "exports": {
      "root": "wix-ui-core",
      "commonjs": "wix-ui-core"
    }
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/dist/src/jest-setup",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$"
  },
  "haste": {
    "preset": "yoshi"
  }
}
