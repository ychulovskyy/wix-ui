{
  "private": false,
  "name": "wix-ui-core",
  "description": "wix-ui-core",
  "version": "1.0.0",
  "author": {
    "name": "Lior Belinsky",
    "email": "liorbe@wix.com"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.js",
  "files": [
    "dist",
    "*.js",
    "*.d.ts",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui.git"
  },
  "scripts": {
    "build": "haste build && import-path --path src/components --dts",
    "pretest": "npm run build && build-storybook",
    "test": "haste test --jest && npm run test:e2e",
    "posttest": "haste lint",
    "test:watch": "haste test --jest --watch",
    "test:e2e": "haste test --protractor",
    "start": "haste start --no-test & npm run storybook",
    "release": "haste release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "hoist-non-react-statics": "^2.3.1",
    "jss": "^9.3.3",
    "jss-preset-default": "^4.0.1",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react-onclickoutside": "^6.7.0",
    "react-popper": "^0.7.4",
    "stylable": "^5.1.0",
    "wix-ui-jss": "^1.0.0"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.3.7",
    "@storybook/react": "^3.3.7",
    "@storybook/storybook-deployer": "^2.0.0",
    "@types/jest": "^21.1.8",
    "@types/react": "^15.6.8",
    "@types/react-dom": "^15.5.6",
    "css": "^2.2.1",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eyes.it": "^2.0.1",
    "gh-pages-auto-release": "^1.1.2",
    "haste-preset-yoshi": "^1.0.19",
    "import-path": "^1.0.0",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-test-renderer": "^15.5.4",
    "stylable-integration": "^6.0.2",
    "ts-jest": "^21.2.4",
    "typescript": "^2.6.2",
    "wix-ui-test-utils": "^1.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "yoshi": {
    "externals": {
      "react": "react",
      "react-dom": "reactDOM"
    },
    "exports": {
      "root": "wix-ui-core",
      "commonjs": "wix-ui-core"
    }
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.(css)$": "./jest.js"
    },
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/dist/src/jest-setup",
    "setupFiles": [
      "<rootDir>/test/enzyme-setup"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$"
  },
  "haste": {
    "preset": "yoshi"
  }
}
