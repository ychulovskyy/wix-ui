{
  "private": false,
  "name": "wix-ui-core",
  "description": "wix-ui-core",
  "version": "1.0.0",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "files": [
    "src",
    "dist",
    "*.js",
    "*.d.ts",
    "!wallaby.js",
    "!protractor.conf.js",
    "index.st.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui.git"
  },
  "scripts": {
    "build": "yoshi build && npm run generate-stylable-index && npm run transpile-mixins && npm run import-path && build-storybook",
    "pr-postbuild": "teamcity-surge-autorelease --dist=storybook-static",
    "test": "npm run test:unit && npm run test:e2e",
    "posttest": "npm run lint",
    "test:watch": "yoshi test --jest --watch",
    "test:unit": "yoshi test --jest",
    "test:e2e": "yoshi test --protractor",
    "lint": "yoshi lint",
    "yoshi-start": "yoshi start --no-test",
    "storybook-start": "npm run storybook",
    "start": "run-p yoshi-start storybook-start",
    "release": "yoshi release && teamcity-surge-autorelease --dist=storybook-static",
    "storybook": "start-storybook -p 6006",
    "import-path": "node scripts/import-path.js",
    "transpile-mixins": "babel src/mixins -d dist/src/mixins",
    "generate-stylable-index": "stc --srcDir=\"./dist/src\" --diagnostics",
    "test:browser": "wix-ui-mocha-runner"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "hoist-non-react-methods": "^1.1.0",
    "lodash": "^4.17.5",
    "playable": "1.11.0",
    "popper.js": "1.14.3",
    "react-onclickoutside": "^6.7.0",
    "react-popper": "0.10.1",
    "react-portal": "^4.1.5",
    "react-transition-group": "^2.2.1",
    "wix-ui-jss": "^1.0.0",
    "wix-ui-test-utils": "^1.0.0"
  },
  "devDependencies": {
    "@storybook/addon-options": "^4.0.0-alpha.6",
    "@storybook/react": "^4.0.0-alpha.6",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.104",
    "@types/node": "^8.0.0",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.8",
    "@types/react-dom": "^16.0.5",
    "@types/react-onclickoutside": "^6.0.2",
    "@types/react-transition-group": "^2.0.6",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.5",
    "eyes.it": "latest",
    "gh-pages-auto-release": "latest",
    "identity-obj-proxy": "^3.0.0",
    "import-path": "latest",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.0",
    "protractor": "^5.3.0",
    "raf": "^3.4.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.3.1",
    "ts-jest": "^22.0.3",
    "tslint-config-prettier": "^1.12.0",
    "tslint-react": "^3.5.1",
    "typescript": "~2.8.3",
    "wait-for-cond": "^1.5.1",
    "wix-eventually": "latest",
    "wix-storybook-utils": "^1.0.0",
    "wix-ui-icons-common": "^1.0.0",
    "wix-ui-mocha-runner": "^0.1.0",
    "yoshi": "~2.7.0"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    },
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/jest-setup",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/test/enzyme-setup"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$"
  },
  "yoshi": {
    "exports": {
      "root": "wix-ui-core",
      "commonjs": "wix-ui-core"
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "optionalDependencies": {
    "teamcity-surge-autorelease": "^1.0.7"
  }
}
