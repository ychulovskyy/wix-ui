{
  "compilerOptions": {
    "sourceMap": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx",
    "./src/typings/*.d.ts"
  ]
}
