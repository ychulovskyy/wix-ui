{
  "name": "wix-storybook-utils",
  "version": "1.0.0",
  "description": "Utilities for automated component documentation within Storybook",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "license": "MIT",
  "files": [
    "src",
    "dist",
    "*.js"
  ],
  "bugs": {
    "url": "https://github.com/wix/wix-ui/issues"
  },
  "homepage": "https://github.com/wix/wix-ui#readme",
  "main": "./dist/src/index.js",
  "scripts": {
    "pretest": "npm run build && build-storybook",
    "test": "haste test --jest",
    "test:watch": "haste test --jest --watch",
    "posttest": "haste lint",
    "start": "haste start --no-test & npm run storybook",
    "release": "haste release",
    "build": "haste build && import-path --path src",
    "storybook": "start-storybook -p 6006"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wix/wix-ui.git"
  },
  "keywords": [
    "storybook",
    "utilities",
    "documentation",
    "generated",
    "automatic",
    "react"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "babel-runtime": "^6.25.0",
    "classnames": "^2.2.5",
    "copy-to-clipboard": "^3.0.8",
    "deep-eql": "^3.0.1",
    "github-markdown-css": "^2.9.0",
    "highlight.js": "^9.12.0",
    "import-path": "latest",
    "jsx-to-string": "git+https://github.com/amiryonatan/jsx-to-string.git#release_branch",
    "loader-utils": "^1.1.0",
    "react-autodocs-utils": "^2.0.1",
    "react-collapse": "^4.0.3",
    "react-docgen": "^2.20.0",
    "react-motion": "^0.5.2",
    "react-remarkable": "^1.1.3",
    "recast": "^0.13.0",
    "wix-style-react": "latest"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.2.16",
    "@storybook/react": "^3.2.16",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint-config-wix": "latest",
    "haste-preset-yoshi": "latest",
    "identity-obj-proxy": "^3.0.0",
    "prop-types": "^15.6.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.0",
    "wix-ui-test-utils": "^1.0.0"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "wix"
    ]
  },
  "eslintConfig": {
    "extends": "wix/react",
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-handler-names": 0,
      "react/no-find-dom-node": 0,
      "react/no-string-refs": 0,
      "react/jsx-boolean-value": 2,
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/enzyme-setup"
    ],
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/jest-setup",
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "haste": {
    "preset": "yoshi"
  },
  "yoshi": {
    "servers": {
      "cdn": {
        "port": 3201
      }
    }
  },
  "externals": {
    "react": {
      "amd": "react",
      "umd": "react",
      "commonjs": "react",
      "commonjs2": "react",
      "root": "React"
    }
  }
}
