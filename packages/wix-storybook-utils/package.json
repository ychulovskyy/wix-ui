{
  "name": "wix-storybook-utils",
  "version": "0.0.1",
  "description": "Utilities for automated component documentation within Storybook",
  "author": "Arijus Å ukys <argshook@gmail.com> (http://arijus.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wix/wix-ui/issues"
  },
  "homepage": "https://github.com/wix/wix-ui#readme",
  "main": "./dist/src/index.js",
  "scripts": {
    "pretest": "haste lint && haste build && build-storybook",
    "test": "haste test",
    "start": "haste start & npm run storybook",
    "release": "haste release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wix/wix-ui.git"
  },
  "keywords": [
    "storybook",
    "utilities",
    "documentation",
    "generated",
    "automatic",
    "react"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "babel-runtime": "~6.25.0",
    "copy-to-clipboard": "^3.0.8",
    "eslint-config-wix": "^1.1.16",
    "github-markdown-css": "^2.9.0",
    "highlight.js": "^9.12.0",
    "react-docgen": "^2.20.0",
    "react-element-to-jsx-string": "^13.1.0",
    "react-remarkable": "^1.1.3",
    "wix-style-react": "^1.1.4264"
  },
  "devDependencies": {
    "@storybook/react": "~3.2.0",
    "@storybook/storybook-deployer": "~2.0.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "~4.1.0",
    "enzyme": "~2.9.0",
    "gh-pages-auto-release": "~1.1.0",
    "haste-cli": "~0.1.16",
    "haste-preset-yoshi": "latest",
    "jsdom": "~11.1.0",
    "prop-types": "~15.6.0",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-test-renderer": "~15.6.0"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "wix"
    ]
  },
  "eslintConfig": {
    "extends": "wix/react",
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-handler-names": 0,
      "react/no-find-dom-node": 0,
      "react/no-string-refs": 0,
      "react/jsx-boolean-value": 2,
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "haste": {
    "preset": "yoshi"
  },
  "yoshi": {
    "servers": {
      "cdn": {
        "port": 3201
      }
    },
    "entry": {
      "app": "index.js"
    },
    "externals": {
      "react": "React",
      "react-dom": "ReactDOM"
    }
  }
}
