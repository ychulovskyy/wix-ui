{
  "name": "wix-storybook-utils",
  "version": "1.0.79",
  "description": "Utilities for automated component documentation within Storybook",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "license": "MIT",
  "files": [
    "src",
    "dist",
    "*.js"
  ],
  "bugs": {
    "url": "https://github.com/wix/wix-ui/issues"
  },
  "homepage": "https://github.com/wix/wix-ui#readme",
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "yoshi build && import-path --path src",
    "pretest": "build-storybook",
    "test": "npm run test:unit",
    "posttest": "npm run lint",
    "test:watch": "yoshi test --jest --watch",
    "test:unit": "yoshi test --jest",
    "lint": "yoshi lint",
    "start": "yoshi start --no-test & npm run storybook",
    "release": "yoshi release",
    "storybook": "start-storybook -p 6006"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wix/wix-ui.git"
  },
  "keywords": [
    "storybook",
    "utilities",
    "documentation",
    "generated",
    "automatic",
    "react"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "babel-runtime": "^6.25.0",
    "classnames": "^2.2.5",
    "copy-to-clipboard": "^3.0.8",
    "github-markdown-css": "^2.9.0",
    "highlight.js": "^9.12.0",
    "import-path": "latest",
    "loader-utils": "^1.1.0",
    "query-string": "^6.0.0",
    "react-autodocs-utils": "^2.0.1",
    "react-collapse": "^4.0.3",
    "react-docgen": "^2.20.0",
    "react-element-to-jsx-string": "^13.2.0",
    "react-motion": "^0.5.2",
    "react-remarkable": "^1.1.3",
    "recast": "^0.14.7",
    "wix-style-react": "latest"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.2.16",
    "@storybook/react": "^3.2.16",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.5",
    "eslint-config-wix": "latest",
    "identity-obj-proxy": "^3.0.0",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.3.1",
    "wix-ui-test-utils": "^1.0.0",
    "yoshi": "^1.2.0"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "wix"
    ]
  },
  "eslintConfig": {
    "extends": "wix/react",
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-handler-names": 0,
      "react/no-find-dom-node": 0,
      "react/no-string-refs": 0,
      "react/jsx-boolean-value": 2,
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/test/enzyme-setup"
    ],
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/jest-setup",
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "yoshi": {
    "servers": {
      "cdn": {
        "port": 3201
      }
    }
  }
}
