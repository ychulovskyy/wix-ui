{
  "private": false,
  "name": "wix-ui-test-utils",
  "version": "1.0.0",
  "author": {
    "name": "Lior Belinsky",
    "email": "liorbe@wix.com"
  },
  "bugs": {
    "url": "https://github.com/wix/wix-ui/issues"
  },
  "homepage": "https://github.com/wix/wix-ui#readme",
  "main": "./dist/src/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wix/wix-ui.git"
  },
  "scripts": {
    "start": "haste start",
    "build": ":",
    "pretest": "haste build",
    "test": "haste test --jest && haste test --protractor",
    "posttest": "haste lint",
    "release": "haste release"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/react": "^15.6.7",
    "@types/react-dom": "^15.5.6",
    "enzyme": "^2.3.0",
    "haste-preset-yoshi": "latest",
    "react": "^15.5.0",
    "react-dom": "^15.6.2",
    "react-test-renderer": "^15.5.4",
    "ts-jest": "^21.2.3",
    "typescript": "^2.6.2"
  },
  "peerDependencies": {
    "react": ">=15",
    "react-dom": ">=15"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/test/.*\\.spec\\.(ts|tsx)$",
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest-setup"
  },
  "haste": {
    "preset": "yoshi"
  }
}
