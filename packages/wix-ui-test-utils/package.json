{
  "private": false,
  "name": "wix-ui-test-utils",
  "version": "1.0.0",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "bugs": {
    "url": "https://github.com/wix/wix-ui/issues"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.js",
  "homepage": "https://github.com/wix/wix-ui#readme",
  "files": [
    "dist",
    "*.js",
    "*.d.ts",
    "!wallaby.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wix/wix-ui.git"
  },
  "scripts": {
    "build": "yoshi build && import-path --path src --dts",
    "test": "npm run test:unit",
    "posttest": "npm run lint",
    "test:watch": "yoshi test --jest --watch",
    "test:unit": "yoshi test --jest",
    "lint": "yoshi lint",
    "start": "yoshi start --no-test",
    "release": "yoshi release"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.7",
    "@types/express": "^4.0.39",
    "@types/jest": "^22.1.1",
    "@types/node": "^8.0.0",
    "@types/puppeteer": "^1.0.0",
    "@types/react": "^16.3.8",
    "@types/react-dom": "^16.0.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.0.5",
    "express": "^4.16.2",
    "import-path": "latest",
    "jest-cli": "^22.4.4",
    "protractor": "^5.3.0",
    "puppeteer": "^1.0.0",
    "raf": "^3.4.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.3.1",
    "ts-jest": "^22.0.3",
    "typescript": "^2.6.2",
    "yoshi": "^2.6.0"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/test/.*\\.spec\\.(ts|tsx)$",
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest-setup/index.ts",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/test/enzyme-setup.ts"
    ]
  }
}
