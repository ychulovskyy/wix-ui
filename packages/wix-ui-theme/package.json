{
  "name": "wix-ui-theme",
  "version": "1.0.0",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Lior Belinsky",
    "email": "liorbe@wix.com"
  },
  "main": "./dist/src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "yoshi start",
    "precommit": "yoshi lint",
    "pretest": "yoshi build",
    "test": "yoshi test --jest && yoshi test --protractor",
    "posttest": "yoshi lint",
    "release": "yoshi release"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/chai": "~4.0.0",
    "@types/express": "~4.0.0",
    "@types/express-session": "~1.15.0",
    "@types/mocha": "~2.2.0",
    "@types/prop-types": "~15.5.0",
    "@types/react": "~15.6.0",
    "@types/react-dom": "~15.5.0",
    "chai": "~4.1.0",
    "enzyme": "~2.9.0",
    "husky": "~0.14.0",
    "jsdom": "~11.2.0",
    "jsdom-global": "~3.0.0",
    "react-test-renderer": "~15.6.0",
    "ts-jest": "^21.2.3",
    "typescript": "~2.4.0",
    "yoshi": "latest"
  },
  "dependencies": {
    "lodash.pickby": "^4.6.0",
    "react": "15.6.1",
    "react-dom": "15.6.1"
  },
  "yoshi": {
    "externals": {
      "react": "React",
      "react-dom": "ReactDOM"
    }
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$",    
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup"
  }
}
