{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "types": ["node", "jest"],
    "lib": ["dom", "es2016"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
